<!--
  @file library.ejs
  @description BeeReader - Library Page
               Displays all books added by the user, with options to edit or delete.
               Users can also add new books via a dedicated interface.
  @created 2025-06-09
-->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- Responsive configuration for various screen sizes -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Fonts & Styles -->
    <link
      href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="stylesheet" href="/css/library.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />

    <title><%= title %></title>
  </head>

  <body>
    <!-- ===== Site Header ===== -->
    <header class="heading">
      <div class="site-name">BeeReader</div>
      <img src="/images/logo.png" alt="BeeReader Logo" />
    </header>

    <!-- ===== Main Layout ===== -->
    <main>
      <!-- ===== Sidebar Navigation ===== -->
      <nav class="sidebar">
        <div class="section">
          <!-- Active: Library -->
          <a href="/library" class="menu-item active" title="Library">
            <svg
              class="icon"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 7h18M3 12h18M3 17h18"
              />
            </svg>
            <span class="ml-2">Library</span>
          </a>

          <!-- Reading List -->
          <a href="/readingList" class="menu-item" title="Reading List">
            <svg
              class="icon"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 19.5A2.5 2.5 0 006.5 22H18a2 2 0 002-2V5a1 1 0 00-1-1H6.5A2.5 2.5 0 004 6.5v13zM8 8h8M8 12h8"
              />
            </svg>
            <span class="ml-2">Reading List</span>
          </a>

          <!-- Profile (Placeholder) -->
          <a href="/profile" class="menu-item" title="Profile">
            <svg
              class="icon"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0z"
              />
            </svg>
            <span class="ml-2">Profile</span>
          </a>
        </div>
      </nav>

      <!-- ===== Main Content Area ===== -->
      <div class="main-content">
        <!-- ===== User Information Section ===== -->
        <div class="user-info">
          <img
            src="<%= profilePicture %>"
            alt="User Avatar"
            class="user-avatar"
          />
          <span class="welcome-message">Welcome, <%= userName %></span>
        </div>

        <!-- ===== Library Section ===== -->
        <div class="library">
          <h1 class="category">My Library</h1>

          <!-- Add New Book Button -->
          <div class="add">
            <button
              type="button"
              class="text-btn add"
              id="new-btn"
              title="Add New Book"
            >
              <i class="fas fa-plus"></i> Add New
            </button>
          </div>

          <!-- Book List Wrapper -->
          <div class="wrapper">
            <% if (data.length === 0) { %>
            <p>No books found.</p>
            <% } else { %>
            <ul id="book-list">
              <% data.forEach(function(book) { %>
              <li data-id="<%= book.id %>">
                <h3><%= book.title %></h3>
                <p class="author"><%= book.author %></p>

                <!-- Book Cover -->
                <% if (book.image_url) { %>
                <img
                  src="<%= book.image_url %>"
                  alt="<%= book.title %>"
                  onerror="this.src='/images/default-cover.png'"
                />
                <% } else { %>
                <p>No image available</p>
                <% } %>

                <!-- Action Buttons -->
                <div class="action-buttons">
                  <button
                    type="button"
                    class="action-button edit-btn mr2"
                    title="Edit"
                  >
                    <i class="fas fa-edit"></i> Edit
                  </button>
                  <button
                    type="button"
                    class="action-button delete-btn"
                    title="Delete"
                  >
                    <i class="fas fa-trash-alt"></i> Delete
                  </button>
                </div>
              </li>
              <% }); %>
            </ul>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <!-- ===== Page Script ===== -->
    <script src="/js/library.js"></script>
  </body>
</html>
